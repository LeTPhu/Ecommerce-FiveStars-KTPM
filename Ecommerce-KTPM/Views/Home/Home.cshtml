<!-- Categories Start -->
<div class="container-fluid pt-5" style="margin-top:-8%;">
    <div class="row px-xl-5 pb-3">
        @{int x = 0;
            foreach (NganhHang i in DataIn.GetNganhHangs())
            {
                <a class="text-decoration-none col-lg-3 col-md-4 col-sm-6 pb-1" href="@Url.Action("Shop", "Shop", new {maNganhHang = i.maNganh})">
                    <div class="cat-item d-flex align-items-center mb-4 rainbow-border">
                        <div class="overflow-hidden" style="width: 100px; height: 100px;">
                            <img style="max-width:160%" class="img-fluid" src="@i.hinhDD" alt="">
                        </div>
                        <div class="flex-fill pl-3 ">
                            <h6>@i.tenNganh</h6>
                        </div>
                    </div>
                </a>
                if (x++ >= 6)
                {
                    break;
                }
            }
        }

        <ji class="text-decoration-none col-lg-3 col-md-4 col-sm-6 pb-1">
            <div class="d-flex align-items-center mb-4">
                <div class="overflow-hidden" style="width: 100px; height: 100px;">
                    <img class="img-fluid" src="" alt="">
                </div>
                <div class="flex-fill pl-3">
                    <h6 class="dropdown-toggle dropright" data-toggle="dropdown">Ngành khác</h6>
                    <div class="dropdown-menu">
                        @{int c = 0;
                            foreach (NganhHang k in DataIn.GetNganhHangs())
                            {
                             
                                <div class="cat-item @(c++)">
                                    <i style="margin:2.5% 4%;"></i><img style="max-width:10%;" class="img-fluid" src="@k.hinhDD" alt="#"><a style="color:black; font-weight:bold" href="@Url.Action("Shop", "Shop", new {maNganhHang = k.maNganh})">  @k.tenNganh</a>
                                </div>
                            }
                        }  
                    </div>
                    <small class="text-body">@c Ngành hàng</small>
                </div>
            </div>
        </ji>

    </div>
</div>
<!-- Categories End -->
<!-- Products Start -->
<div class="container-fluid pt-5 pb-3">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Sản Phẩm Mới</span></h2>
    <div class="row px-xl-5">
        @{int m = 0;
            foreach (SanPham l in DataIn.GetSanPhams().Where(a => a.daDuyet == true))
            {
                <div class="col-lg-3 col-md-4 col-sm-6 pb-1 max" style="max-width:16.65%; padding:0px 7px; margin-top:-1.3%;">
                    <div class="product-item bg-light mb-4 rainbow-border">
                        <div class="product-img position-relative overflow-hidden">
                            <img class="img-fluid w-100" src="@l.hinhDD" alt="">
                            @{
                                if (l.giamGia != 0)
                                { <div class="igiamgia">@l.giamGia%<P>GIẢM</P></div>
                            }
                            }
                        <div class="product-action">
                            @if (t.TKTV != l.taiKhoan)
                            {
                                using (Html.BeginForm("AddToCart", "GioHang", FormMethod.Post))
                                {
                                    <input type="hidden" name="maSP" value="@l.maSP" />
                                    <button class="btn btn-outline-dark btn-square" onclick="thongbao()"><i class="fa fa-shopping-cart"></i></button>
                                }
                            }
                        </div>
                        </div>
                        <div class="text-center py-4">
                            <ul class="list" style="list-style: none; padding: 0;">
                                <a class="h6 text-decoration-none text-truncate" href="@Url.Action("ShopDetail", "Shop", new {maSanPham = l.maSP})">
                                <li class="setweight">@l.tenSP</li></a>
                            </ul>
                            <div class="d-flex align-items-center justify-content-center mt-2">
                                <p style="color: #ee4d2d; font-weight:bold; font-size:18px;">@string.Format("{0:#,##0.₫}", l.giaBan - (l.giaBan * l.giamGia / 100))</p>
                                @{
                                    if (l.giamGia != 0)
                                    { <p style="font-size:13px;" class="text-muted ml-2"><del>@string.Format("{0:#,##0.₫}", l.giaBan)</del></p>}
                                }
                            </div>
                            <div class="d-flex align-items-center justify-content-center mb-1" style="font-size:12px;">
                                <small class="fa fa-star text-primary mr-1"></small>
                                <small class="fa fa-star text-primary mr-1"></small>
                                <small class="fa fa-star text-primary mr-1"></small>
                                <small class="fa fa-star text-primary mr-1"></small>
                                <small class="fa fa-star text-primary mr-1"></small>
                                <a style="color:brown" href="@Url.Action("ShopTK", "Shop", new {tenTKShop = l.taiKhoan})">(@l.taiKhoan)</a>
                            </div>
                        </div>
                    </div>
                </div>
                if (m++ >= 17)
                {
                    break;
                }
            }
        }

    </div>
</div>
<!-- Products End -->
