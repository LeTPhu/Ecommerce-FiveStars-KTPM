@using Ecommerce_KTPM.Models

@{
    ViewBag.Title = "Trang chủ";
    TaiKhoanTV t = Session["DangNhap"] as TaiKhoanTV;

}
<link href="~/Content/giamgia.css" rel="stylesheet" />
<link href="~/Content/sale.css" rel="stylesheet" />

<!-- Carousel Start -->
<div class="container-fluid mb-3">
    <div class="row px-xl-5">
        <div class="col-lg-8">
            <div id="header-carousel" class="carousel slide carousel-fade mb-30 mb-lg-0" data-ride="carousel">
                <ol class="carousel-indicators">
                    @{ int z = 0; int v = -1;
                            foreach (NganhHang s in DataIn.GetNganhHangs())
                            {
                            <li @(v++) data-target="#header-carousel" data-slide-to="@v" class="@(z++ ==0 ? "active" : "")"></li>
                        }
                    }
                </ol>
                <div class="carousel-inner">
                    @{int b = 0;
                        foreach (NganhHang i in DataIn.GetNganhHangs())
                        {
                            <div class="carousel-item position-relative @(b ++ ==0 ? "active" : "")" style="height: 430px;">
                                <img class="position-absolute w-100 h-100" src="@i.hinhDD" style="object-fit: cover;">
                                <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                                    <div class="p-3" style="max-width: 700px;">
                                        <h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown">@i.tenNganh</h1>
                                        <p class="mx-md-5 px-5 animate__animated animate__bounceIn">@i.ghiChu</p>
                                        <a href="@Url.Action("Shop","Shop", new {maNganhHang = i.maNganh})" class="btn btn-outline-light py-2 px-4 mt-3 animate__animated animate__fadeInUp">Xem ngay</a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="product-offer mb-30" style="height: 200px;">
                <img class="img-fluid" src="~/Assets/img/Spdientu.png" alt="">
                <div class="offer-text">
                    <h6 class="text-white text-uppercase">Sale 5%</h6>
                    <h3 class="text-white mb-3">Sản phẩm công nghệ</h3>
                    <a href="@Url.Action("Shop", "Shop", new {maNganhHang = 1})" class="btn btn-primary">Mua ngay</a>
                </div>
            </div>
            <div class="product-offer mb-30" style="height: 200px;">
                <img class="img-fluid" src="~/Assets/img/raucuqua.jpg" alt="">
                <div class="offer-text">
                    <h6 class="text-white text-uppercase">Sale 15%</h6>
                    <h3 class="text-white mb-3">Sản phẩm Rau củ</h3>
                    <a href="@Url.Action("Shop", "Shop", new {maNganhHang = 7})" class="btn btn-primary">Mua ngay</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Carousel End -->
<!-- Featured Start -->
<div class="container-fluid pt-5" style="margin-top:-4%;">
